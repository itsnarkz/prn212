<Window x:Class="Assignment1PRN.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment1PRN"
        xmlns:vm="clr-namespace:Assignment1PRN.ViewModels"
        xmlns:views="clr-namespace:Assignment1PRN.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="800">


    <Grid>
        <ContentControl Name="ContentControl" Content="{Binding CurrentViewModel}" RenderTransformOrigin="0.5,0.5">
            <ContentControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.112"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ContentControl.RenderTransform>
        </ContentControl>
    </Grid>
</Window>
