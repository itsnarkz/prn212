<Window x:Class="PRNProject.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRNProject.View"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="251,116,0,0" VerticalAlignment="Top" Height="35" Width="90" FontSize="16"/>
        <TextBox x:Name="username" HorizontalAlignment="Left" Margin="431,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Height="31"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="251,204,0,0" VerticalAlignment="Top" Height="35" Width="90" FontSize="16"/>
        <PasswordBox x:Name="password"  HorizontalAlignment="Left" Margin="431,204,0,0" VerticalAlignment="Top" Width="180" Height="31"/>
        <Button x:Name="login_btn" Content="Login" HorizontalAlignment="Center" Margin="0,271,0,0" VerticalAlignment="Top" Height="42" Width="120" Click="login_btn_Click"/>

    </Grid>
</Window>
