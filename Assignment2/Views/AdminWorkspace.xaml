<UserControl x:Class="Assignment1PRN.Views.AdminWorkspace"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Assignment1PRN.Views"
             mc:Ignorable="d"
             d:DesignHeight="750" d:DesignWidth="800">
    <Grid>
        <TextBlock Foreground="Navy" FontSize="30" Text="Admin Workspace" Margin="10 0 0 0"></TextBlock>
        <Button Command="{Binding ManageUser}" Height="30" Width="90" Margin=" 0 0 100 0" Content="Customers"></Button>
        <Button Command="{Binding ManageRoom}" Height="30" Width="90" Margin=" 100 0 0 0" Content="Rooms"></Button>
        <Button Command="{Binding Report}" Height="30" Width="90" Margin=" 0 75 0 0" Content="Report"></Button>
        <Button Background="Red" Command="{Binding Logout}" Content="Logout" Margin="305,480,305,150"/>
    </Grid>
</UserControl>
